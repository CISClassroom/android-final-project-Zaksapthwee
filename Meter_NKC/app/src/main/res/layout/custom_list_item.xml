<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".list_item">

        <androidx.cardview.widget.CardView
            android:layout_width="374dp"
            android:layout_height="121dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_marginTop="15dp"
            app:cardBackgroundColor="@color/colorskyDark"
            app:cardCornerRadius="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/namedorm1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:fontFamily="@font/thaisansneue_semi_bold"
                        android:layout_marginLeft="20dp"
                        android:gravity="center"
                        android:text="หอพักที่"
                        android:textColor="@android:color/background_light"
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/namedorm"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:fontFamily="@font/thaisansneue_semi_bold"
                        android:gravity="center"
                        android:paddingLeft="40dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:text=""
                        android:textColor="@android:color/background_light"
                        android:textSize="30sp" />
                    <TextView
                        android:id="@+id/namedorm2"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:fontFamily="@font/thaisansneue_semi_bold"

                        android:gravity="center"
                        android:text="เลขห้อง"
                        android:textColor="@android:color/background_light"
                        android:textSize="30sp" />


                    <TextView
                        android:id="@+id/room"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/thaisansneue_semi_bold"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:text=""
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@android:color/background_light"
                        android:textSize="30sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/metter"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="เลขมิเตอร์ไฟฟ้า"
                    android:textColor="@color/common_google_signin_btn_text_dark_default"
                    android:textSize="26sp"
                    tools:fontFamily="@font/thaisansneue_semi_bold" />


            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>