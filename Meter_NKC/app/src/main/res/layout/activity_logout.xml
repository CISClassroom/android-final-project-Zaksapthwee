<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Logout">

    <TextView
        android:id="@+id/showemail"
        android:layout_width="240dp"
        android:layout_height="35dp"
        android:layout_marginTop="288dp"
        android:fontFamily="@font/thaisansneue_ultra_bold"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.766"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/showeuid"
        android:layout_width="240dp"
        android:layout_height="35dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/thaisansneue_ultra_bold"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/showemail"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/showemail"
        app:layout_constraintTop_toBottomOf="@+id/showemail" />

    <Button
        android:id="@+id/btn_signout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="196dp"
        android:text="ออกจากระบบ"
        app:layout_constraintEnd_toEndOf="@+id/showeuid"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/showeuid"
        app:layout_constraintTop_toBottomOf="@+id/showeuid" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="60dp"
        android:layout_height="35dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/thaisansneue_semi_bold"
        android:text="UID :"
        android:textAlignment="textEnd"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/showeuid"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="60dp"
        android:layout_height="35dp"
        android:fontFamily="@font/thaisansneue_semi_bold"
        android:text="Email :"
        android:textAlignment="textEnd"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/showemail"
        app:layout_constraintHorizontal_bias="0.887"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/showemail" />
</androidx.constraintlayout.widget.ConstraintLayout>